<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ounwan.guest">

    <insert id="addGuest" parameterType="guests" useGeneratedKeys="true" keyProperty="guestNumber">
    	INSERT INTO
    	GUESTS(EMAIL, PHONE)
    	VALUES(#{email}, #{phone})
    </insert>

	<select id="getGuestInfo" parameterType="map" resultType="int">
		SELECT COUNT(*)
		FROM GUESTS guest
		JOIN ORDERS o on guest.GUEST_NUMBER = o.GUEST_NUMBER
		WHERE o.ORDER_NUMBER = #{orderNumber}
		AND guest.EMAIL = #{guestEmail}
	</select>
</mapper>